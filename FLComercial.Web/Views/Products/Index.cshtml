@model IEnumerable<FLComercial.Web.Data.Entities.Product>

@{
    ViewData["Title"] = "Productos";
}
<section class="content-header">
    <h1>
        Administracion de Productos
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Home", "Home")"><i class="fa fa-dashboard"></i> Inicio</a></li>
        <li class="active">Productos</li>
    </ol>
</section>
<section class="content">
    <div class="box">
        <div class="box-header with-border">            
            <h3 class="box-title"><i class="fa fa-qrcode"></i></h3>

            <div class="box-tools pull-right">
                <a class="btn btn-primary" data-toggle="modal" data-target="#ModalAgregarUsuario" title="Nuevo"><span class="fa fa-plus"></span> Nuevo</a>

                <button type="button" class="btn btn-outline-primary"
                        title="Excel">
                    <i class="fa fa-file-excel-o"></i> Excel
                </button>

                <button type="button" class="btn btn-outline-warning"
                        title="Pdf">
                    <i class="fa fa-file-pdf-o"></i> PDF
                </button>
                <button type="button" class="btn btn-outline-warning"
                        title="Imprimir">
                    <i class="fa fa-print"></i> Imprimir
                </button>
            </div>
        </div>
        <div class="box-body">
            <table id="example" class="table table-bordered table-striped table-responsive">
                <thead>
                    <tr style="background:#00a65a;color: #fff">
                        <th>
                            Nombre
                        </th>
                        <th>
                            Precio
                        </th>
                        <th>
                            Imagen
                        </th>
                        <th>
                            Stock
                        </th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ImageUrl)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Stock)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                                @*<a class="btn btn-warning" data-toggle="modal" data-target="#ModalEditarUsuario" onclick="ObtenerUsuarioPorId('@item.Id','Usuarios/ObtenerUsuarioPorId')"><span class="fa fa-pencil-square-o"></span> Edita</a>
                                <a class="btn btn-info" data-toggle="modal" data-target="#ModalDetalleUsuario" onclick="ObtenerUsuarioPorId('@item.Id','Usuarios/ObtenerUsuarioPorId')"><span class="fa fa-eye"></span> Detalles</a>
                                <a class="btn btn-danger" data-toggle="modal" data-target="#ModalEliminarUsuario" onclick="ObtenerUsuarioPorId('@item.Id','Usuarios/ObtenerUsuarioPorId')"><span class="fa fa-close"></span> Eliminar</a>*@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
